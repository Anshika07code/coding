       #include <stdio.h>

int main() {
    int pin = 1234, enteredPin, choice;
    float balance = 5000, amount;

    printf("Enter PIN: ");
    scanf("%d", &enteredPin);

    if (enteredPin != pin) {
        printf("Invalid PIN\n");
        return 0;
    }

    printf("1. Balance\n2. Deposit\n3. Withdraw\n");
    scanf("%d", &choice);

    if (choice == 1)
        printf("Balance: %.2f\n", balance);
    else if (choice == 2) {
        printf("Enter amount: ");
        scanf("%f", &amount);
        balance += amount;
        printf("New Balance: %.2f\n", balance);
    }
    else if (choice == 3) {
        printf("Enter amount: ");
        scanf("%f", &amount);
        if (amount <= balance) {
            balance -= amount;
            printf("New Balance: %.2f\n", balance);
        } else {
            printf("Insufficient Balance\n");
        }
    }
    return 0;
}
