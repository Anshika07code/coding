#include <stdio.h>
int bs(int a[], int l, int r, int x) {
    if (l > r) return -1;
    int m = (l + r) / 2;
    if (a[m] == x) return m;
    if (x < a[m]) return bs(a, l, m - 1, x);
    return bs(a, m + 1, r, x);
}
int main() {
    int a[] = {1,2,3,4,5};
    printf("%d", bs(a, 0, 4, 4));
    return 0;
}
