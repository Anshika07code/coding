//Code for insert,delete,update,function dynamic memory in C language using array.
#include <stdio.h>

int main() {
    int arr[100], n, choice, i, j, temp, search, found;

    printf("Enter number of elements (max 100): ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    do {
        printf("\n\n==== ARRAY OPERATIONS MENU ====\n");
        printf("1. Display array\n");
        printf("2. Find sum of elements\n");
        printf("3. Find average\n");
        printf("4. Find maximum and minimum\n");
        printf("5. Search an element\n");
        printf("6. Sort array (ascending)\n");
        printf("7. Reverse array\n");
        printf("8. Frequency of each element\n");
        printf("9. Exit\n");

        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {

        case 1:
            printf("\nArray elements: ");
            for (i = 0; i < n; i++)
                printf("%d ", arr[i]);
            break;

        case 2: {
            int sum = 0;
            for (i = 0; i < n; i++)
                sum += arr[i];
            printf("Sum of elements: %d", sum);
            break;
        }

        case 3: {
            int sum = 0;
            for (i = 0; i < n; i++)
                sum += arr[i];
            printf("Average = %.2f", (float)sum / n);
            break;
        }

        case 4: {
            int max = arr[0], min = arr[0];
            for (i = 1; i < n; i++) {
                if (arr[i] > max) max = arr[i];
                if (arr[i] < min) min = arr[i];
            }
            printf("Maximum = %d\nMinimum = %d", max, min);
            break;
        }

        case 5:
            printf("Enter number to search: ");
            scanf("%d", &search);
            found = 0;

            for (i = 0; i < n; i++) {
                if (arr[i] == search) {
                    printf("%d found at position %d\n", search, i + 1);
                    found = 1;
                }
            }
            if (!found)
                printf("%d not found in the array.", search);
            break;

        case 6:
            for (i = 0; i < n - 1; i++) {
                for (j = i + 1; j < n; j++) {
                    if (arr[i] > arr[j]) {
                        temp = arr[i];
                        arr[i] = arr[j];
                        arr[j] = temp;
                    }
                }
            }
            printf("Array sorted successfully!");
            break;

        case 7:
            printf("Reversed array: ");
            for (i = n - 1; i >= 0; i--)
                printf("%d ", arr[i]);
            break;

        case 8: {
            int freq[100] = {0};
            printf("\nFrequency of each element:\n");

            for (i = 0; i < n; i++) {
                freq[arr[i]]++;
            }

            for (i = 0; i < 100; i++) {
                if (freq[i] > 0)
                    printf("%d occurs %d times\n", i, freq[i]);
            }
            break;
        }

        case 9:
            printf("Exiting program...\n");
            break;

        default:
            printf("Invalid choice! Try again.\n");
        }

    } while (choice != 9);

    return 0;
}
